@model NTTCinemas.Models.DbModels.Room

@{
    ViewData["Title"] = "Chỉnh sửa thông tin phòng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <h1><b>Chỉnh sửa phòng</b></h1>
    <div class="card">
        <div class="card-body">
            <div class="row justify-content-center">
                <div class="col-md-4">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="RoomId" />
                        <input type="hidden" asp-for="BranchId">
                        <input type="hidden" asp-for="CreationTime">
                        <div class="form-group">
                            <label class="control-label">Tên phòng cũ</label>
                            <input class="form-control" value="@Model.RoomName" disabled />
                            <span asp-validation-for="RoomName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Tên phòng mới</label>
                            <input asp-for="RoomName" class="form-control" />
                            <span asp-validation-for="RoomName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="WidthOfRoomMap" class="control-label"></label>
                            <input asp-for="WidthOfRoomMap" class="form-control" />
                            <span asp-validation-for="WidthOfRoomMap" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="LengthOfRoomMap" class="control-label"></label>
                            <input asp-for="LengthOfRoomMap" class="form-control" />
                            <span asp-validation-for="LengthOfRoomMap" class="text-danger"></span>
                        </div>

                        <!-- Button trigger modal input -->
                        <div class="d-flex justify-content-end">
                            <button type="button" class="btn btn-primary" data-toggle="modal"
                                data-target="#editRoomModal-@Model.BranchId">
                                <i class="align-middle me-2" data-feather="save"></i>Lưu
                            </button>
                        </div>

                        <!-- Modal input -->
                        <div class="modal fade" id="editRoomModal-@Model.BranchId" tabindex="-1" role="dialog"
                            aria-labelledby="editRoomModalLabel" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title">Xác nhận thay đổi</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        <p>
                                            Nếu thực hiện thay đổi kích thước phòng thì cấu trúc sơ đồ phòng cần phải được thiết lập lại (Có nghĩa là các ghế sẽ bị xóa).
                                        </p>
                                        <p>Chắc chắn thay đổi?</p>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary"
                                            data-dismiss="modal">Hủy</button>
                                        <button type="submit" class="btn btn-primary">Xác nhận</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <a asp-action="Details" asp-route-roomId="@Model.RoomId">Trở về</a>
</div>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}