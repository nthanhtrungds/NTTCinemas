                                                <div class="text-muted small mt-1">Aenean tellus metus, bibendum sed,
                                                    posuere ac, mattis non.</div>
                                                <div class="text-muted small mt-1">5h ago</div>
                                            </div>
                                        </div>
                                    </a>
                                </div> *@
                                <div class="dropdown-menu-footer">
                                    <a href="#" class="text-muted">Show all messages</a>
                                </div>
                            </div>
                        </li>
                        <!-- end dropdown mesage -->
                        <!-- login partial   -->
                        
                        @await Html.PartialAsync("_LoginPartial")

                        <!-- end ;llogin partial  -->
                    </ul>
                </div>
            </nav>
            <!--End head nav-->
            <!--Alert notice-->
            @if(TempData["NoticeMessage"] != null)
            {
                <div id="noticeMessage" class="alert @TempData["NoticeType"] text-center" role="alert" hidden>
                    @TempData["NoticeMessage"]
                </div>
            }
            <!--End alert notice-->
            <!--Body content-->
            <main class="content">

                <div class="container">

                    @RenderBody()

                </div>
            </main>
            <!--End body content-->

            <!--Footer-->
            <footer class="footer">
                <div class="container-fluid">
                    <div class="row text-muted">
                        <div class="col-6 text-start">
                            <p class="mb-0">
                                <a class="text-muted" href="" target="_blank"><strong>NTT Cinemas</strong></a>
                            </p>
                        </div>
